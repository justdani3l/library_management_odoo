<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="books_form_view" model="ir.ui.view">
            <field name="name">library.books.form</field>
            <field name="model">library.books</field>
            <field name="arch" type="xml">
                <form string="Library Books">
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="book_title"/>
                            <h1>
                                <field name="book_title" placeholder="Book Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="isbn"/>
                                <field name="author"/>
                                <field name="publisher_name"/>
                                <field name="production_year"/>
                                <field name="pages"/>
                            </group>
                            <group>
                                <field name="availability"/>
                                <field name="categories"/>
                                <field name="language"/>
                                <field name="rating"/>
                                <field name="book_price"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="books_tree_view" model="ir.ui.view">
            <field name="name">library.books.tree</field>
            <field name="model">library.books</field>
            <field name="arch" type="xml">
                <tree string="Library Books">
                    <field name="book_title"/>
                    <field name="isbn"/>
                    <field name="author"/>
                    <field name="publisher_name"/>
                    <field name="production_year"/>
                    <field name="categories"/>
                    <field name="rating"/>
                    <field name="book_price"/>
                </tree>
            </field>
        </record>

        <record id="books_pivot_view" model="ir.ui.view">
            <field name="name">library.books.pivot</field>
            <field name="model">library.books</field>
            <field name="arch" type="xml">
                <pivot string="Library Books">
                    <field name="book_title" type="row"/>
                    <field name="book_price" type="col"/>
                </pivot>
            </field>
        </record>


        <record id="books_kanban_view" model="ir.ui.view">
            <field name="name">library.books.kanban</field>
            <field name="model">library.books</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <field name="book_title"/>
                    <field name="book_price"/>
                    <field name="author"/>
                    <field name="id" />
                    <field name="image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div style="width: 150px; height: 185px;">
                                <div t-attf-class="oe_kanban_global_click">
                                    <b>
                                        <div style="font-size:20px;" class="o_kanban_image_fill_top">
                                            <img t-att-src="kanban_image('library.books','image', record.id.raw_value)"
                                                 style="width:100%; height:166px;"/>
                                        </div>
                                        <br/>
                                    </b>
                                </div>
                            </div>
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-12">
                                        <strong>
                                            <field name="book_title"/>
                                        </strong>
                                    </div>
                                </div>
                                <t t-if="record.book_price.value">
                                    <hr class="mt8 mb8"/>
                                    <field name="book_price"/>
                                </t>
                                <div>
                                    <field name="author"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="books_act_window" model="ir.actions.act_window">
            <field name="name">Library Books</field>
            <field name="res_model">library.books</field>
            <field name="view_mode">kanban,tree,form,pivot</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Books.
                </p>
            </field>
        </record>


        <menuitem name="Books" id="books_menu" parent="library_root_menu" action="books_act_window"/>

    </data>
</odoo>