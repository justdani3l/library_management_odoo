<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="issue_form_view" model="ir.ui.view">
            <field name="name">library.issue.form</field>
            <field name="model">library.issue</field>
            <field name="arch" type="xml">
                <form string="Issue Books">
                    <sheet>
                        <div class="oe_title">
                            <label for="book_id"/>
                            <h1>
                                <field name="book_id" placeholder="Book Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="member_id"/>
                                <field name="fine_amount"/>
                                <field name="employee_id"/>
                            </group>
                            <group>
                                <field name="issue_date"/>
                                <field name="due_date"/>
                                <field name="return_date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="issue_tree_view" model="ir.ui.view">
            <field name="name">library.issue.tree</field>
            <field name="model">library.issue</field>
            <field name="arch" type="xml">
                <tree string="Issue Books">
                    <field name="book_id"/>
                    <field name="member_id"/>
                    <field name="issue_date"/>
                    <field name="fine_amount"/>
                    <field name="due_date"/>
                    <field name="return_date"/>
                </tree>
            </field>
        </record>

        <record id="issue_graph_view" model="ir.ui.view">
            <field name="name">library.issue.graph</field>
            <field name="model">library.issue</field>
            <field name="arch" type="xml">
                <graph string="Issue Books">
                    <field name="book_id"/>
                    <field name="member_id" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="issue_pivot_view" model="ir.ui.view">
            <field name="name">library.issue.pivot</field>
            <field name="model">library.issue</field>
            <field name="arch" type="xml">
                <pivot string="Issue Books">
                    <field name="book_id" type="row"/>
                    <field name="member_id" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="issue_kanban_view" model="ir.ui.view">
            <field name="name">library.issue.kanban</field>
            <field name="model">library.issue</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="book_id"/>
                    <field name="member_id"/>
                    <field name="issue_date"/>
                    <field name="due_date"/>
                    <field name="return_date"/>
                    <field name="fine_amount"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_res_partner_kanban">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title oe_partner_heading">
                                        <field name="book_id"/>
                                        <field name="member_id"/>
                                        <field name="issue_date"/>
                                        <field name="due_date"/>
                                        <field name="return_date"/>
                                        <field name="fine_amount"/>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="issue_act_window" model="ir.actions.act_window">
            <field name="name">Issue Books</field>
            <field name="res_model">library.issue</field>
            <field name="view_mode">kanban,tree,form,graph,pivot</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Issue Books.
                </p>
            </field>
        </record>

        <menuitem name="Issue Books" id="issue_menu" parent="books_menu" action="issue_act_window"/>

    </data>
</odoo>