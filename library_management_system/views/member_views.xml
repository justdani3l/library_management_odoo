<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="member_form_view" model="ir.ui.view">
            <field name="name">library.member.form</field>
            <field name="model">library.member</field>
            <field name="arch" type="xml">
                <form string="Library Members">
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Full Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="city"/>
                            </group>
                            <group>
                                <field name="address"/>
                                <field name="gender"/>
                                <field name="membership_date"/>
                            </group>
                        </group>
                        <notebook>
                        <page string="Invoice">
                            <field name="invoice_ids">
                                <tree string="Invoice">
                                    <field name="book_id"/>
                                    <field name="issue_date"/>
                                    <field name="return_date"/>
                                    <field name="employee_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="member_kanban_view" model="ir.ui.view">
            <field name="name">library.member.kanban</field>
            <field name="model">library.member</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="membership_date"/>
                    <field name="address"/>
                    <field name="phone"/>
                    <field name="city"/>
                    <field name="id" />
                    <field name="image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div style="width: 150px; height: 185px;">
                                <div t-attf-class="oe_kanban_global_click">
                                    <b>
                                        <div style="font-size:20px;" class="o_kanban_image_fill_top">
                                            <img t-att-src="kanban_image('library.member','image', record.id.raw_value)"
                                                 style="width:100%; height:166px;"/>
                                        </div>
                                        <br/>
                                    </b>
                                </div>
                            </div>
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-12">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <t t-if="record.email.value">
                                    <hr class="mt8 mb8"/>
                                    <field name="email"/>
                                </t>
                                <div>
                                    <field name="membership_date"/>
                                </div>
                                <div>
                                    <field name="address"/>
                                </div>
                                <div>
                                    <field name="phone"/>
                                </div>
                                <div>
                                    <field name="city"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="member_tree_view" model="ir.ui.view">
            <field name="name">library.member.tree</field>
            <field name="model">library.member</field>
            <field name="arch" type="xml">
                <tree string="Library Members">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="city"/>
                    <field name="gender"/>
                    <field name="membership_date"/>
                </tree>
            </field>
        </record>

        <record id="member_act_window" model="ir.actions.act_window">
            <field name="name">Library Members</field>
            <field name="res_model">library.member</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>



        <menuitem name="Member" id="member_menu" parent="library_root_menu" action="member_act_window"/>
    </data>
</odoo>