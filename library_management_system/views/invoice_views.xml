<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="invoice_form_view" model="ir.ui.view">
            <field name="name">library.invoice.form</field>
            <field name="model">library.invoice</field>
            <field name="arch" type="xml">
                <form string="Invoice">
                    <sheet>
                        <div class="oe_title">
                            <label for="member_id"/>
                            <h1>
                                <field name="member_id" placeholder="Choose"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="issue_id"/>
                            </group>
                            <group>
                                <field name="invoice_date"/>
                                <field name="return_date"/>
                                <field name="total_amount"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="invoice_tree_view" model="ir.ui.view">
            <field name="name">library.invoice.tree</field>
            <field name="model">library.invoice</field>
            <field name="arch" type="xml">
                <tree string="Invoice">
                    <field name="member_id"/>
                    <field name="issue_id"/>
                    <field name="invoice_date"/>
                    <field name="return_date"/>
                    <field name="total_amount"/>
                    <field name="payment_status"/>
                </tree>
            </field>
        </record>

        <record id="invoice_calendar_view" model="ir.ui.view">
            <field name="name">ProjectName.invoice.calendar</field>
            <field name="model">ProjectName.invoice</field>
            <field name="arch" type="xml">
                <calendar string="ModelTitle" date_start="example_date_field" color="example_boolean_field">
                    <field name="example_field"/>
                    <field name="example_field" widget="monetary"/>
                </calendar>
            </field>
        </record>

        <record id="invoice_graph_view" model="ir.ui.view">
            <field name="name">ProjectName.invoice.graph</field>
            <field name="model">ProjectName.invoice</field>
            <field name="arch" type="xml">
                <graph string="ModelTitle">
                    <field name="example_field"/>
                    <field name="example_field" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="invoice_pivot_view" model="ir.ui.view">
            <field name="name">ProjectName.invoice.pivot</field>
            <field name="model">ProjectName.invoice</field>
            <field name="arch" type="xml">
                <pivot string="ModelTitle">
                    <field name="example_field" type="row"/>
                    <field name="example_field" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="invoice_kanban_view" model="ir.ui.view">
            <field name="name">ProjectName.invoice.kanban</field>
            <field name="model">ProjectName.invoice</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="example_field"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_res_partner_kanban">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title oe_partner_heading">
                                        <field name="example_field"/>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="invoice_act_window" model="ir.actions.act_window">
            <field name="name">Invoice</field>
            <field name="res_model">ProjectName.invoice</field>
            <field name="view_mode">kanban,tree,form,calendar,graph,pivot</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Invoice.
                </p>
            </field>
        </record>

        <menuitem name="Invoice" id="invoice_menu" parent="your_root_menu" action="invoice_act_window"/>

    </data>
</odoo>