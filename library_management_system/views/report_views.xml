<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="report_form_view" model="ir.ui.view">
            <field name="name">library.report.form</field>
            <field name="model">library.report</field>
            <field name="arch" type="xml">
                <form string="Library Report">
                    <sheet>
                        <div class="oe_title">
                            <label for="employee_id"/>
                            <h1>
                                <field name="employee_id" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="report_date"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="report_tree_view" model="ir.ui.view">
            <field name="name">library.report.tree</field>
            <field name="model">library.report</field>
            <field name="arch" type="xml">
                <tree string="Report" sample="1">
                    <field name="employee_id"/>
                    <field name="report_date"/>
                </tree>
            </field>
        </record>

        <record id="report_graph_view" model="ir.ui.view">
            <field name="name">library.report.graph</field>
            <field name="model">library.report</field>
            <field name="arch" type="xml">
                <graph string="Report" sample="1">
                    <field name="employee_id"/>
                    <field name="report_date" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="report_pivot_view" model="ir.ui.view">
            <field name="name">library.report.pivot</field>
            <field name="model">library.report</field>
            <field name="arch" type="xml">
                <pivot string="Report" sample="1">
                    <field name="employee_id" type="row"/>
                    <field name="report_date" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="report_act_window" model="ir.actions.act_window">
            <field name="name">Report</field>
            <field name="res_model">library.report</field>
            <field name="view_mode">tree,form,graph,pivot</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Report.
                </p>
            </field>
        </record>

        <menuitem name="Report" id="report_menu" parent="configuration_menu" action="report_act_window" sequence="6"/>

    </data>
</odoo>