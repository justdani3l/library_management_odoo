<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="pharmacy_medicine_form_view" model="ir.ui.view">
            <field name="name">pharmacy.medicine.form</field>
            <field name="model">pharmacy.medicine</field>
            <field name="arch" type="xml">
                <form string="Pharmacy Medicine">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="category_id"/>
                                <field name="manufacturer"/>
                            </group>
                            <group>
                                <field name="expiry_date"/>
                                <field name="stock_quantity"/>
                                <field name="price"/>
                                <field name="prescription_required"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pharmacy_medicine_tree_view" model="ir.ui.view">
            <field name="name">pharmacy.medicine.tree</field>
            <field name="model">pharmacy.medicine</field>
            <field name="arch" type="xml">
                <tree string="Pharmacy Medicine">
                    <field name="name" optional="show"/>
                    <field name="code" optional="show"/>
                    <field name="category_id" optional="show"/>
                    <field name="manufacturer" optional="show"/>
                    <field name="expiry_date" optional="show"/>
                    <field name="stock_quantity" optional="show"/>
                    <field name="price" optional="show"/>
                    <field name="prescription_required" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="pharmacy_medicine_graph_view" model="ir.ui.view">
            <field name="name">pharmacy.medicine.graph</field>
            <field name="model">pharmacy.medicine</field>
            <field name="arch" type="xml">
                <graph string="Pharmacy Medicine">
                    <field name="name"/>
                    <field name="price" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="pharmacy_medicine_pivot_view" model="ir.ui.view">
            <field name="name">pharmacy.medicine.pivot</field>
            <field name="model">pharmacy.medicine</field>
            <field name="arch" type="xml">
                <pivot string="Pharmacy Medicine">
                    <field name="name" type="row"/>
                    <field name="price" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="pharmacy_medicine_search_view" model="ir.ui.view">
            <field name="name">pharmacy.medicine.search</field>
            <field name="model">pharmacy.medicine</field>
            <field name="arch" type="xml">
                <search>
                    <searchpanel>
                        <field name="category_id" icon="fa-list" select="multi" enable_counters="1"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="pharmacy_medicine_kanban_view" model="ir.ui.view">
            <field name="name">pharmacy.medicine.kanban</field>
            <field name="model">pharmacy.medicine</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="price"/>
                    <field name="category_id"/>
                    <field name="expiry_date"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_res_partner_kanban">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title oe_partner_heading">
                                        <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="pharmacy_medicine_act_window" model="ir.actions.act_window">
            <field name="name">Pharmacy Medicine</field>
            <field name="res_model">pharmacy.medicine</field>
            <field name="view_mode">kanban,tree,form,graph,pivot</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem name="Medicine" id="pharmacy_medicine_menu" parent="om_pharmacy.pharmacy_root_menu" action="pharmacy_medicine_act_window"/>

    </data>
</odoo>